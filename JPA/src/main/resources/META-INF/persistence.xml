<persistence xmlns="https://jakarta.ee/xml/ns/persistence"  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_1.xsd"
             version="3.1">

    <persistence-unit name="jpamysql" transaction-type="RESOURCE_LOCAL">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.dam.model.Estudiante</class>
        <class>com.dam.model.Credential</class>
        <class>com.dam.model.Expediente</class>

            <properties>
                <property name="jakarta.persistence.jdbc"
                          value="com.mysql.cj.jdbc.Driver"/>
                <property name="jakarta.persistence.jdbc.url"
                          value="jdbc:mysql://localhost:3307/addjpa?useSSL=false&amp;serverTimezone=UTC"/>
                <property name="jakarta.persistence.jdbc.user"
                          value="root"/>
                <property name="jakarta.persistence.jdbc.password"
                          value="root"/>
                <property name="jakarta.persistence.schema-generation.database.action"
                          value="drop-and-create"/>
                <property name="hibernate.show_sql" value="true"/>
                <property name="hibernate.format_sql" value="true"/>
            </properties>

    </persistence-unit>
</persistence>